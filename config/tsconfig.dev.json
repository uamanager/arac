{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "declaration": true,
    "strictNullChecks": false,
    "removeComments": false,
    "moduleResolution": "classic",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "../lib/"
  },
  "include": [
    "../src/**/*"
  ],
  "exclude": [
    "../node_modules",
    "../lib"
  ],
  "types": [
    "node",
    "fs"
  ]
}
